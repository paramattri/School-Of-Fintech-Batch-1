<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean id="welcome" class="com.manipal.bean.Welcome">
    	<property name="message" value="Welcome to India"/>
     </bean>
     
     <bean id="employee1" class="com.manipal.bean.Employee">
     	<property name="empName" value="Param"/>
     	<property name="empId" value="10"/>
     	<property name="salary" value="50000"/>
     </bean>
     
     <bean id="employee2" class="com.manipal.bean.Employee">
     	<constructor-arg name="empName" value="Param"/>
     	<constructor-arg name="empId" value="11"/>
     	<constructor-arg name="salary" value="60000"/>
     </bean>

</beans>